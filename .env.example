# Todo Application Environment Configuration

# Node.js Runtime Environment
# Use 'development' for local development, 'production' for production
NODE_ENV=development

# Database Connection (PostgreSQL)
# For local development with database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/postgres
PGUSER=postgres
PGHOST=localhost
PGPASSWORD=postgres
PGDATABASE=postgres
PGPORT=5432

# Application Configuration
PORT=5000

# Docker Configuration
# When using docker-compose, the db host should be the service name
DOCKER_DB_HOST=db

# Google Cloud Configuration (for Pulumi deployment)
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1
GCP_IMAGE_TAG=latest

# Pulumi Configuration
PULUMI_PROJECT_NAME=todo-app
PULUMI_DB_INSTANCE_NAME=todo-db-instance
PULUMI_DB_NAME=todoapp
PULUMI_DB_USERNAME=todouser
PULUMI_DB_PASSWORD=changeme